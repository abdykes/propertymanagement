<h1>Listing units</h1>

<table class="gradienttable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Square feet</th>
      <th>Property</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.square_feet %></td>
        <td>
          <% if unit.property_id? %>
            <%= Property.find(unit.property_id).name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Unit %>
<%= link_to 'New Unit', new_unit_path %>
<% end %>
